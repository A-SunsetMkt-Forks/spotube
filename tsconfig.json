{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": [
      "ES2019.Array",
      "DOM"
    ],
    "jsx": "react",
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "downlevelIteration": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": "src"
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "**/node_modules/*"
  ]
}